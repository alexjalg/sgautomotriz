<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="cortesias" namespace="/cortesias" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Cortesia" method="{1}" class="actions.CortesiasAction">
            <result name="success" type="tiles">mant-cortesia-index</result>
            <result name="adicionar" type="tiles">mant-cortesia-adicionar</result>
            <result name="modificar" type="tiles">mant-cortesia-adicionar</result>
            <result name="grabar" type="tiles">mant-cortesia-grabar</result>
            <result name="actualizar" type="tiles">mant-cortesia-grabar</result>
            <result name="vrfSeleccion" type="tiles">mant-cortesia-grabar</result>
            <result name="eliminar" type="tiles">mant-cortesia-eliminar</result>
        </action>
    </package>
</struts>
