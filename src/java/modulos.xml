<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="modulos" namespace="/modulos" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Modulo" method="{1}" class="actions.ModulosAction">
            <result name="success" type="tiles">mant-modulos-index</result>
            <result name="adicionar" type="tiles">mant-modulos-adicionar</result>
            <result name="grabar" type="tiles">mant-modulos-grabar</result>
            <result name="actualizar" type="tiles">mant-modulos-grabar</result>
            <result name="vrfSeleccion" type="tiles">mant-modulos-grabar</result>
            <result name="eliminar" type="tiles">mant-modulos-eliminar</result>
        </action>
    </package>
</struts>
