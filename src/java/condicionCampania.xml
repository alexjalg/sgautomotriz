<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="condicionCampania" namespace="/condicionCampania" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        <action name="*CondicionCampania" method="{1}" class="actions.CondicionCampaniaAction">
            <result name="success" type="tiles">mant-condicionCampania-index</result>
            <result name="listVersiones" type="tiles">mant-condicionCampania-listVersiones</result>
            <result name="grabar" type="tiles">mant-condicionCampania-grabar</result>
            <result name="actualizarEstado" type="tiles">mant-condicionCampania-grabar</result>
        </action>
    </package>
</struts>
