<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="opciones" namespace="/opciones" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Opcion" method="{1}" class="actions.OpcionesAction">
            <result name="success" type="tiles">mant-opciones-index</result>
            <result name="adicionar" type="tiles">mant-opciones-adicionar</result>
            <result name="grabar">/mantenimientos/opciones/grabar.jsp</result>
            <result name="actualizar">/mantenimientos/opciones/grabar.jsp</result>
            <result name="vrfSeleccion">/mantenimientos/opciones/grabar.jsp</result>
            <result name="eliminar">/mantenimientos/opciones/eliminar.jsp</result>
        </action>
    </package>
</struts>
