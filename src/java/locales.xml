<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="locales" namespace="/locales" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Local" method="{1}" class="actions.LocalesAction">
            <result name="success" type="tiles">mant-locales-index</result>
            <result name="adicionar" type="tiles">mant-locales-adicionar</result>
            <result name="grabar" type="tiles">mant-locales-grabar</result>
            <result name="actualizar" type="tiles">mant-locales-grabar</result>
            <result name="vrfSeleccion" type="tiles">mant-locales-grabar</result>
            <result name="eliminar" type="tiles">mant-locales-eliminar</result>
            <result name="getProvincias" type="tiles">mant-locales-listProvincias</result>
            <result name="getDistritos" type="tiles">mant-locales-listDistritos</result>
        </action>
    </package>
</struts>
