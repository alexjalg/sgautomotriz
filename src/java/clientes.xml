<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="clientes" namespace="/clientes" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Cliente" method="{1}" class="actions.ClientesAction">
            <result name="success" type="tiles">mant-clientes-index</result>
            <result name="adicionar" type="tiles">mant-clientes-adicionar</result>
            <result name="modificar" type="tiles">mant-clientes-adicionar</result>
            <result name="grabar" type="tiles">mant-clientes-grabar</result>
            <result name="actualizar" type="tiles">mant-clientes-grabar</result>
            <result name="vrfSeleccion" type="tiles">mant-clientes-grabar</result>
            
            <result name="prov">/mantenimientos/clientes/cargaProv.jsp</result>
            <result name="dist">/mantenimientos/clientes/cargaDist.jsp</result>
            <result name="eliminar" type="tiles">mant-clientes-eliminar</result>
        </action>
    </package>
</struts>
