<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="permisos" namespace="/permisos" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Permisos" method="{1}" class="actions.PermisosAction">
            <result name="success" type="tiles">/mantenimientos/permisos/index.jsp</result>
            
            <!-- MODULOS -->
            <result name="modulosTipUsu" type="tiles">mant-permisos-modulosIndex</result>
            <result name="adicionarModulo" type="tiles">mant-permisos-modulosAdicionar</result>
            <result name="listModulos" type="tiles">mant-permisos-listModulos</result>
            <result name="grabarModulo" type="tiles">mant-permisos-grabar</result>
            <result name="actualizarModulo" type="tiles">mant-permisos-grabar</result>
            <result name="vrfSelecModulo" type="tiles">mant-permisos-grabar</result>
            
            <!-- OPCIONES -->
            <result name="opcionesTipUsu" type="tiles">mant-permisos-opcionesIndex</result>
            <result name="adicionarOpcion" type="tiles">mant-permisos-opcionesAdicionar</result>
            <result name="listOpciones" type="tiles">mant-permisos-listOpciones</result>
            <result name="grabarOpcion" type="tiles">mant-permisos-grabar</result>
            <result name="actualizarOpcion" type="tiles">mant-permisos-grabar</result>
            <result name="vrfSelecOpcion" type="tiles">mant-permisos-grabar</result>
            
            <!-- SUB-OPCIONES -->
            <result name="subopcionesTipUsu" type="tiles">mant-permisos-subopcionesIndex</result>
            <result name="adicionarSubOpcion" type="tiles">mant-permisos-subopcionesAdicionar</result>
            <result name="grabarSubOpcion" type="tiles">mant-permisos-grabar</result>
            <result name="actualizarSubOpcion" type="tiles">mant-permisos-grabar</result>
            <result name="vrfSelecSubOpcion" type="tiles">mant-permisos-grabar</result>
            
            <result name="eliminar" type="tiles">mant-permisos-eliminar</result>
        </action>
    </package>
</struts>
