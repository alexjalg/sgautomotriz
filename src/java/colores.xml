<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="colores" namespace="/colores" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="*Color" method="{1}" class="actions.ColoresAction">
            <result name="success" type="tiles">mant-colores-index</result>
            <result name="adicionar" type="tiles">mant-colores-adicionar</result>
            <result name="grabar" type="tiles">mant-colores-grabar</result>
            <result name="actualizar">/mantenimientos/colores/grabar.jsp</result>
            <result name="vrfSeleccion">/mantenimientos/colores/grabar.jsp</result>
            <result name="eliminar">/mantenimientos/colores/eliminar.jsp</result>
        </action>
    </package>
</struts>
